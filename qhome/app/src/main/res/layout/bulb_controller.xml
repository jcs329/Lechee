<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_lamp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/lamp_name_font"
        android:textColor="@color/color_white"
        android:layout_marginLeft="@dimen/lamp_dimmer_margin_top"/>
    <com.quantatw.roomhub.ui.RoomHubViewFilpper

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="false"
        android:id="@+id/ir_viewFlipper">

    </com.quantatw.roomhub.ui.RoomHubViewFilpper>
    <LinearLayout
        android:id="@+id/ll_lamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lamp_image_margin_top"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/icon_mid"
            android:layout_height="@dimen/icon_mid"
            android:src="@drawable/btn_back"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_lamp"
                android:layout_width="@dimen/lamp_image_width"
                android:layout_height="@dimen/lamp_image_height"
                android:src="@drawable/icon_lamp_off"/>
            <TextView
                android:id="@+id/txt_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lamp_off_margin_top"
                android:textSize="@dimen/lamp_off_font_size"
                android:textColor="@color/color_white59"
                android:text="@string/bulb_control_off"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_next"
            android:layout_width="@dimen/icon_mid"
            android:layout_height="@dimen/icon_mid"
            android:src="@drawable/btn_next"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dimmer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lamp_dimmer_margin_top"
        android:layout_below="@+id/ll_lamp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/lamp_darker_width"
                android:layout_height="@dimen/lamp_darker_height"
                android:layout_marginRight="@dimen/city_button_padding_top"
                android:src="@drawable/icon_darker"/>
            <SeekBar
                android:id="@+id/dimmer_seekbar"
                android:layout_width="@dimen/lamp_dimmer_bar_width"
                android:layout_height="@dimen/lamp_dimmer_bar_height"
                android:minWidth="@dimen/lamp_dimmer_bar_width"
                android:maxWidth="@dimen/lamp_dimmer_bar_width"
                android:progressDrawable="@null"
                android:thumbOffset="15dp"
                android:paddingRight="13dp"
                android:max = "99"
                android:progress="59"
                android:minHeight="@dimen/lamp_dimmer_bar_height"
                android:maxHeight="@dimen/lamp_dimmer_bar_height"
                android:thumb="@drawable/switch_dimmer_switch"
                android:background="@drawable/bar_dimmer"/>
            <ImageView
                android:layout_width="@dimen/lamp_brighter_width"
                android:layout_height="@dimen/lamp_darker_height"
                android:layout_marginLeft="@dimen/city_button_padding_top"
                android:src="@drawable/icon_brighter"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/lamp_percentage_font_size"
                android:textColor="@color/color_white80"
                android:text="1%"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft
                    ="@dimen/lamp_percentage_gap"
                android:textSize="@dimen/lamp_percentage_font_size"
                android:textColor="@color/color_white80"
                android:text="100%"/>
        </LinearLayout>
    </LinearLayout>
    <include android:layout_width="fill_parent"
        android:layout_height="@dimen/controller_bottom_height"
        android:layout_marginTop="@dimen/fan_controller_margin_top"
        android:layout_alignParentBottom="true"
        layout="@layout/lamp_controller_bottom"/>

</RelativeLayout>
