<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:weightSum="5"
    android:background="@color/white_mask">

    <ImageView
        android:id="@+id/btn_power"
        android:layout_width="@dimen/controller_power_btn_size"
        android:layout_height="@dimen/controller_power_btn_size"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:src="@drawable/fan_power_btn_selector"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_power"
        android:layout_centerInParent="true"
        android:gravity="center">
        <Button
            android:id="@+id/btn_advance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textColor="@drawable/btn_text_selector"
            android:background="@android:color/transparent"
            android:textSize="@dimen/controller_type_font_size"
            android:textAllCaps="false"
            android:text="@string/advance"/>
    </LinearLayout>
</RelativeLayout>
