<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lamp_group_control_list_margin_left"
        android:layout_marginRight="@dimen/lamp_group_control_list_margin_left"
        android:layout_marginBottom="@dimen/lamp_group_control_lampname_margin_bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/lamp_name_font"
            android:textColor="@color/color_white"
            android:layout_gravity="center"
            android:text="Lamp name"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/lamp_percentage_font_size"
                android:text="@string/bulb_group_control_select_all"/>
            <CheckBox
                android:id="@+id/chkb_selectall"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                style="@style/bulb_group_checkbox"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_blue">

    </View>
    <ListView
        android:id="@+id/list_lamp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:clickable="false"
        >

    </ListView>

    <LinearLayout
        android:id="@+id/ll_dimmer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_select_bulb_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/bulb_group_control_luminance_selected_number"
            android:layout_marginRight="@dimen/lamp_group_control_list_margin_left"
            android:layout_marginTop="@dimen/lamp_group_control_list_margin_left"
            android:layout_marginBottom="@dimen/lamp_group_control_list_margin_top"
            android:textSize="@dimen/lamp_group_control_item_font"
            android:textColor="@color/color_white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/lamp_darker_width"
                android:layout_height="@dimen/lamp_darker_height"
                android:layout_marginRight="@dimen/city_button_padding_top"
                android:src="@drawable/icon_darker"/>
            <SeekBar
                android:id="@+id/dimmer_seekbar"
                android:layout_width="@dimen/lamp_dimmer_bar_width"
                android:layout_height="@dimen/lamp_dimmer_bar_height"
                android:minWidth="@dimen/lamp_dimmer_bar_width"
                android:maxWidth="@dimen/lamp_dimmer_bar_width"
                android:progressDrawable="@null"
                android:thumbOffset="15dp"
                android:paddingRight="13dp"
                android:max="99"
                android:progress="59"
                android:minHeight="@dimen/lamp_dimmer_bar_height"
                android:maxHeight="@dimen/lamp_dimmer_bar_height"
                android:thumb="@drawable/switch_dimmer_switch"
                android:background="@drawable/bar_dimmer"/>
            <ImageView
                android:layout_width="@dimen/lamp_brighter_width"
                android:layout_height="@dimen/lamp_darker_height"
                android:layout_marginLeft="@dimen/city_button_padding_top"
                android:src="@drawable/icon_brighter"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/lamp_percentage_font_size"
                android:textColor="@color/color_white80"
                android:text="1%"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lamp_percentage_gap"
                android:textSize="@dimen/lamp_percentage_font_size"
                android:textColor="@color/color_white80"
                android:text="100%"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lamp_group_control_list_margin_left"
            android:layout_marginBottom="@dimen/lamp_group_control_list_margin_left"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_close_lamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_group_control2_selector"
                android:textColor="@drawable/btn_group_control2_textcolor_selector"
                android:textSize="@dimen/lamp_group_control_title_font"
                android:text="@string/bulb_group_control_luminance_close"/>
            <Button
                android:id="@+id/btn_open_lamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_group_control2_selector"
                android:textColor="@drawable/btn_group_control2_textcolor_selector"
                android:textSize="@dimen/lamp_group_control_title_font"
                android:layout_marginLeft="@dimen/lamp_group_control_list_margin_left"
                android:text="@string/bulb_group_control_luminance_open"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/lamp_group_control_list_margin_left">
            <ImageView
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_gravity="center"
                android:src="@drawable/icon_info"/>
            <ImageView
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/lamp_group_control_lampname_margin_bottom"
                android:layout_marginRight="@dimen/lamp_group_control_lampname_margin_bottom"
                android:src="@drawable/btn_blub_on"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/lamp_percentage_font_size"
                android:text="@string/bulb_group_control_select_description"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blue"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/icon_mid"
                android:layout_height="@dimen/icon_mid"
                android:src="@drawable/btn_cancel"
                android:layout_margin="@dimen/lamp_group_control_lampname_margin_bottom"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bulb_group_control_select_notice"
                android:textColor="@color/color_white"
                android:textSize="@dimen/lamp_group_control_item_font"
                android:layout_marginBottom="@dimen/lamp_group_control_list_margin_top"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
