<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/room_hub_list_height"
    android:background="@color/white_mask"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_mode"
        android:layout_width="@dimen/schedule_mode_icon_width"
        android:layout_height="match_parent"
        android:background="@color/color_schedule_mode"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/mode_icon"
            android:layout_width="@dimen/schedule_mode_icon_size"
            android:layout_height="@dimen/schedule_mode_icon_size"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical"
        android:background="#e8f184">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.3dp">
            <TextView
                android:id="@+id/txt_devname"
                android:layout_width="@dimen/dev_name_width"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_lock"
                android:gravity="center_vertical"
                android:textSize="@dimen/dev_name_font_size"
                android:textColor="@color/color_white"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawablePadding="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end" >
                <TextView
                    android:id="@+id/txt_sensor_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/icon_temp"
                    android:text="25Â°"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sensor_info_font_size"/>
                <android.widget.Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_sensor_hum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/icon_hum"
                    android:text="25%"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sensor_info_font_size"/>
                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/room_hub_menu_selector"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/select_pair_btn_height"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13.3dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <include
                android:id="@+id/ll_electric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:visibility="gone"
                layout="@layout/room_hub_electric"/>

            <LinearLayout
                android:id="@+id/ll_add_electric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_add_appliance_btn_margine_bottom"
                android:layout_weight="5"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_add_electric"
                    android:layout_width="@dimen/select_pair_btn_width"
                    android:layout_height="@dimen/add_people_btn_height"
                    android:background="@drawable/salmon_background_selector"
                    android:textSize="@dimen/select_pair_font_size"
                    android:textColor="@color/color_white"
                    android:text="@string/add_electric"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/mode_icon2"
                    android:layout_width="@dimen/main_funmode_img_width"
                    android:layout_height="@dimen/main_funmode_img_height"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/add_people_btn_height"
                    android:textSize="@dimen/main_page_process_text_size"
                    android:textColor="@color/color_blue"
                    android:gravity="bottom|left"
                    android:text=""/>
            </LinearLayout>
    <!--
            <include android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/select_pair"
                layout="@layout/room_hub_select_pair"
                android:visibility="visible"
                android:layout_weight="1"/>

            <include  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/determine_pair"
                layout="@layout/room_hub_determine_pair"
                android:visibility="gone"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/next_schedule"
                android:layout_width="match_parent"
                android:layout_height="@dimen/select_pair_btn_height"
                android:visibility="gone"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btn_funmode_icon"
                    android:layout_width="@dimen/funmode_icon_size"
                    android:layout_height="@dimen/funmode_icon_size"
                    android:background="@drawable/icon_cooler_on"
                    android:layout_gravity="center_vertical"/>

                <TextView
