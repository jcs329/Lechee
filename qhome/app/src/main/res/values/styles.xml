<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->

    <style name="controller_switch_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/controller_funmode_height</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/controller_btn_selector</item>
    </style>

    <style name="IRLearningConfirmDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- inherit from the material theme -->
    <style name="MenuSettings" parent="@android:style/Widget.ListPopupWindow">
        <item name="android:popupMenuStyle">@style/Theme.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/Theme.DropDownListView</item>
        <!-- Change Overflow Menu ListView Item Height & Property -->
        <item name="android:listPreferredItemHeight">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/menu_text_selector</item>
    </style>

    <style name="Theme.PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/color_white</item>

    </style>

    <style name="Theme.DropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/menu_settings_selector</item>
        <item name="android:divider">@android:color/black</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="schedule_week_btn">
        <item name="android:layout_width">@dimen/schedule_week_btn_size</item>
        <item name="android:layout_height">@dimen/schedule_week_btn_size</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@color/color_dark_grayish_cyan</item>
        <item name="android:textSize">@dimen/schedule_week</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="custom_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/controller_funmode_height</item>
        <item name="android:background">@drawable/controller_btn_selector</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/main_page_process_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="schedule_setting_week_btn">
        <item name="android:layout_width">@dimen/schedule_setting_week_btn_size</item>
        <item name="android:layout_height">@dimen/schedule_setting_week_btn_size</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginRight">@dimen/schedule_setting_week_margin_right</item>
        <item name="android:textColor">@drawable/schedule_week_txt_selector</item>
        <item name="android:textSize">@dimen/schedule_setting_week_font_size</item>
        <item name="android:background">@drawable/schedule_week_btn_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="schedule_mode_btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/schedule_setting_mode_btn_height</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/controller_btn_selector</item>
    </style>

    <style name="schedule_time_btn">
        <item name="android:layout_width">@dimen/schedule_setting_text_width</item>
        <item name="android:layout_height">@dimen/schedule_setting_text_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/time_settings_title</item>
        <item name="android:background">@color/color_white25</item>
    </style>

    <!-- Theme.Material requires API level 21 -->
    <!--<style name="Theme.SettingsBase" parent="@android:style/Theme.Material" />-->
    <style name="Theme.SettingsBase" parent="@android:style/Theme.Holo" />

    <style name="Theme.Settings.ActionBar.TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/dev_name_font_size</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/Theme.Settings.ActionBar.TitleTextStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/btn_back</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundStacked">@android:color/transparent</item>
        <item name="android:backgroundSplit">@android:color/transparent</item>
    </style>

    <style name="Theme.Settings" parent="Theme.SettingsBase">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listDivider">@color/color_blue</item>
        <item name="android:divider">@color/color_blue</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_white</item>
        <!--<item name="android:windowBackground">@drawable/background</item>-->
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="CustomNumberPickerDialog" parent="android:style/Theme.Holo">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/color_liteblack</item>
        <item name="android:textSize">@dimen/main_page_loading_text_size</item>
    </style>

    <style name="fan_controller_switch_btn">
        <item name="android:layout_width">@dimen/fan_controller_v2_mode_width</item>
        <item name="android:layout_height">@dimen/controller_funmode_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/schedule_time</item>
        <item name="android:textColor">@drawable/fan_switch_txt_selector</item>
        <item name="android:background">@drawable/fan_switch_btn_selector</item>
    </style>

    <style name="fan_controller_swing_btn">
        <item name="android:layout_width">@dimen/fan_swing_btn_size</item>
        <item name="android:layout_height">@dimen/fan_swing_btn_size</item>
        <item name="android:textSize">@dimen/schedule_time</item>
        <item name="android:textColor">@drawable/fan_switch_txt_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/fan_swing_btn_selector</item>
    </style>
    <style name="fan_controller_swing_btn_bg">
        <item name="android:layout_width">@dimen/fan_swing_btn_bg_size</item>
        <item name="android:layout_height">@dimen/fan_swing_btn_bg_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_air_direction</item>
    </style>
    <style name="bulb_group_checkbox">
        <item name="android:button">@drawable/checkbox_bulb_group_selector</item>
    </style>
</resources>
