<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_schedule_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_add_people"
        android:layout_width="@dimen/schedule_add_btn_width"
        android:layout_height="@dimen/schedule_add_btn_height"
        android:textColor="@color/color_white"
        android:textSize="@dimen/time_settings_title"
        android:text="@string/add_people"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:background="@drawable/add_schedule_btn_selector"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23.7dp">
        <ListView
            android:id="@+id/lst_my_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_list_height"
            android:divider="@null"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@drawable/transparent"
            android:layout_marginLeft="@dimen/onboarding_setup_roomhub_margin"
            android:layout_marginRight="@dimen/onboarding_setup_roomhub_margin"
            android:layout_marginTop="@dimen/onboarding_setup_roomhub_list_top" />
    </LinearLayout>

</LinearLayout>
