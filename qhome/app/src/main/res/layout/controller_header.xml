<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ace5ea">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txt_dev_name"
            android:layout_width="@dimen/controller_devname_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dev_name_font_size"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/txt_sensor_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_temp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sensor_info_font_size" />
        <android.widget.Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_sensor_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_hum"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sensor_info_font_size" />
    </LinearLayout>
</LinearLayout>
