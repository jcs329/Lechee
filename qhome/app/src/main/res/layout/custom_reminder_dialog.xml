<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="5dp">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/color_liteblack"
        android:textSize="@dimen/reminder_titile_font_size"
        android:id="@+id/txtTitle" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/color_liteblack"
        android:textSize="@dimen/reminder_message_font_size"
        android:id="@+id/txtMessage" />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggestion1"
        android:textColor="@color/color_liteblack"
        android:textSize="@dimen/reminder_suggestion1_font_size"
        android:id="@+id/txtSuggestion1" />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggestion2"
        android:textColor="@color/color_liteblack"
        android:textSize="@dimen/reminder_suggestion2_font_size"
        android:id="@+id/txtSuggestion2" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok_i_know"
            android:textColor="@drawable/custom_dialog_txt_selector"
            android:background="@drawable/custom_noti_dialog_btn_selector"
            android:id="@+id/ok_i_know" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/remind_later"
            android:textColor="@drawable/custom_dialog_txt_selector"
            android:background="@drawable/custom_noti_dialog_btn_selector"
            android:id="@+id/btn_wait" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/handle_now"
            android:textColor="@drawable/custom_dialog_txt_selector"
            android:background="@drawable/custom_noti_dialog_btn_selector"
            android:id="@+id/btn_handle" />
    </LinearLayout>

</LinearLayout>