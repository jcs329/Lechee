                    android:layout_height="wrap_content"
                    android:textSize="@dimen/select_pair_font_size"
                    android:textColor="@color/btn_color"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:text="@string/wifi_security_none"/>
                <ImageView
                    android:id="@+id/btn_schedule_icon"
                    android:layout_width="@dimen/schedule_icon_width"
                    android:layout_height="@dimen/schedule_icon_height"
                    android:background="@drawable/icon_schedule"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/btn_share_icon"
                    android:layout_width="@dimen/schedule_icon_height"
                    android:layout_height="@dimen/schedule_icon_height"
                    android:background="@drawable/icon_share"
