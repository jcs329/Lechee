<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/controller_temp_top_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_controller_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/controller_temp_font_size"
            android:text="25"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/controller_degrees_top_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="@dimen/controller_degrees_font_size"
                android:text="°"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_lower"
            android:layout_width="@dimen/controller_lower_btn_size"
            android:layout_height="@dimen/controller_lower_btn_size"
            android:clickable="true"
            android:src="@drawable/controller_ac_temp_lower_selector"/>
        <android.widget.Space
            android:layout_width="@dimen/controller_temp_gap"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btn_higher"
            android:layout_width="@dimen/controller_lower_btn_size"
            android:layout_height="@dimen/controller_lower_btn_size"
            android:clickable="true"
            android:src="@drawable/controller_ac_temp_higher_selector"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_gravity="right|bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_gravity="center"
            android:textSize="@dimen/determine_pair_font_size"
            android:text="@string/recommend_temp"/>
        <Button
            android:id="@+id/btn_suggest_temp"
            android:layout_width="@dimen/controller_suggest_size"
            android:layout_height="@dimen/controller_suggest_size"
            android:layout_gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dev_name_font_size"
            android:paddingLeft="8dp"
            android:textAlignment="center"
            android:text="24°"
            android:background="@drawable/suggest_temp_btn_selector"/>
    </LinearLayout>
</LinearLayout>
