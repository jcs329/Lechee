<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/asset_image"
        android:layout_gravity="center"
        android:layout_width="@dimen/add_asset_grid_image_width"
        android:layout_height="@dimen/add_asset_grid_image_height"
        android:background="@drawable/btn_add_ac" />
    <android.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <TextView
        android:id="@+id/asset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:textSize="@dimen/determine_pair_font_size"
        android:text="@string/electric_ac"
        android:layout_gravity="center"/>
</LinearLayout>