<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/activity_air_purifier_ir_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="10"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_mode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="6"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">
            <!-- 33: ION Toggle -->
            <LinearLayout
                android:id="@+id/ion_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:weightSum="6"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_ion"
                    android:layout_width="@dimen/air_ir_btn_size"
                    android:layout_height="@dimen/air_ir_btn_size"
                    android:background="@drawable/air_btn_ion_selector"
                    android:clickable="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/color_white"
                    android:text="@string/air_nanoe"/>
            </LinearLayout>
            <!-- 37: Humidification Toggle -->
            <LinearLayout
                android:id="@+id/humidity_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="6"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btn_humidity"
                    android:layout_width="@dimen/air_ir_btn_size"
                    android:layout_height="@dimen/air_ir_btn_size"
                    android:background="@drawable/air_btn_humidity_selector"
                    android:clickable="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/color_white"
                    android:text="@string/fan_advance_mode_humidification"/>
            </LinearLayout>
            <!-- 39: Swing On 40: Swing Off -->
            <LinearLayout
                android:id="@+id/air_direction_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="6"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/wind_layout"
                    android:layout_width="@dimen/air_ir_wind_btn_width"
                    android:layout_height="@dimen/air_ir_wind_btn_height"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/ap_shape_air_direction"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_swing_auto"
                        style="@style/fan_controller_swing_btn"
                        android:text="@string/swing"/>
                    <android.widget.Space
                        android:layout_width="@dimen/start_guide_margin"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/btn_swing_fix"
                        style="@style/fan_controller_swing_btn"
                        android:text="@string/advance_fix"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/swing_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_swing"
                        android:layout_width="@dimen/air_ir_btn_size"
                        android:layout_height="@dimen/air_ir_btn_size"
                        android:background="@drawable/air_btn_swing_selector"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/color_white"
                    android:text="@string/air_direction"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 7: FanSpeed Increase 8: FanSpeed Decrease -->
        <LinearLayout
            android:id="@+id/ll_speed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="10"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/speed_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:weightSum="10"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btn_lower"
                    android:layout_width="@dimen/air_ir_btn_size"
                    android:layout_height="@dimen/air_ir_btn_size"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:src="@drawable/fan_lower_btn_selector"/>
                <ImageView
                    android:id="@+id/btn_higher"
                    android:layout_width="@dimen/air_ir_btn_size"
                    android:layout_height="@dimen/air_ir_btn_size"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/fan_higher_btn_selector"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/speed_switch_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btn_speed"
                    android:layout_width="@dimen/air_wind_btn_size"
                    android:layout_height="@dimen/air_wind_btn_size"
                    android:background="@drawable/air_btn_wind_selector"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/schedule_time"
                android:textColor="@color/color_white"
                android:text="@string/fan_controller_speed"/>
        </LinearLayout>
    </LinearLayout>

    <include android:layout_width="fill_parent"
        android:layout_height="@dimen/controller_bottom_height"
        android:layout_marginTop="@dimen/fan_controller_margin_top"
        android:layout_alignParentBottom="true"
        layout="@layout/pink_power_btn_bottom"/>

</RelativeLayout>
