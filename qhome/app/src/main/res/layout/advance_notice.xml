<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.3dp"
        android:layout_marginLeft="17dp"
        android:text="@string/abnormal_notice"
        android:textColor="@color/color_white"
        android:textSize="@dimen/time_settings_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_page_button_height"
        android:layout_marginTop="7.3dp"
        android:background="@color/color_advance_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="@string/notice"
            android:textColor="@color/color_white"
            android:textSize="@dimen/time_settings_title"
            android:layout_weight="1"
            android:textAllCaps="false"/>
        <ImageView
            android:id="@+id/btn_switch_off"
            android:layout_width="@dimen/schedule_switch_off_width"
            android:layout_height="@dimen/schedule_switch_off_height"
            android:layout_marginRight="17dp"
            android:gravity="right"
            android:background="@drawable/switch_off"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_notice_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_page_button_height"
        android:background="@color/color_advance_item"
        android:layout_marginTop="7.3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_notice_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="@string/notice_setting"
            android:textColor="@color/color_white"
            android:textSize="@dimen/time_settings_title"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:layout_weight="1"
            android:textAllCaps="false"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:background="@drawable/btn_next" />
    </LinearLayout>
</LinearLayout>