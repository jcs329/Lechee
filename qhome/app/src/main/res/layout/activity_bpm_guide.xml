<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_back"
        android:id="@+id/image_leftBtn"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_next"
        android:id="@+id/image_rightBtn"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/image_guide"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/bpm_guide_image_width"
        android:layout_height="@dimen/bpm_guide_image_height" />

    <TextView
        android:layout_below="@id/image_guide"
        android:id="@+id/txt_bpm_guide_step_desc"
        android:layout_marginTop="@dimen/bpm_guide_desc_margin_top"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/bpm_guide_desc_text_size"
        android:layout_width="@dimen/bpm_guide_desc_width"
        android:layout_height="wrap_content" />

</RelativeLayout>