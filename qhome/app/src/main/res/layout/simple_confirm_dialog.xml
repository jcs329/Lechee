<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="273.3dp"
    android:layout_height="wrap_content"
    android:background="@color/btn_color">

    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="80dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/color_charcoal_grey"
        android:textSize="@dimen/ir_learning_button_text_size"
        android:id="@+id/message"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/yes"
            android:background="@drawable/salmon_background_selector"
            android:textSize="@dimen/ir_learning_button_text_size"
            android:textColor="@color/color_white"
            android:id="@+id/yesBtn" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/no"
            android:background="@drawable/salmon_background_selector"
            android:textColor="@color/color_white"
            android:textSize="@dimen/ir_learning_button_text_size"
            android:id="@+id/noBtn" />
    </LinearLayout>

</LinearLayout>