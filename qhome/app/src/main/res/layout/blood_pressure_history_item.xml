<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bp_history_item_height"
    android:background="@color/color_bp_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/schedule_time"
            android:textColor="@color/color_white"/>
        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/schedule_time"
            android:textColor="@color/color_white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_max_bp"
            android:layout_width="@dimen/bp_item_unit_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/bp_history_data_font_size"
            android:gravity="right"
            android:textColor="@color/color_white"/>
        <TextView
            android:layout_width="@dimen/bp_item_horizontal_gap"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="@dimen/bp_history_data_font_size"
            android:textColor="@color/color_white"
            android:text="/"/>
        <TextView
            android:id="@+id/txt_min_bp"
            android:layout_width="@dimen/bp_item_unit_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/bp_history_data_font_size"
            android:gravity="left"
            android:textColor="@color/color_white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/bp_history_heartrate_width"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical|left"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/bp_history_heartrate_img_width"
            android:layout_height="@dimen/bp_history_heartrate_img_height"
            android:background="@drawable/icon_pulse"/>
        <TextView
            android:id="@+id/txt_hear_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.7dp"
            android:textSize="@dimen/bp_history_data_font_size"
            android:textColor="@color/color_white"/>
    </LinearLayout>
</LinearLayout>