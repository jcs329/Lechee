<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text="@string/bulb_pairing"
            android:textSize="@dimen/font_21_3"/>
        <Button
            android:id="@+id/btn_step"
            android:layout_width="@dimen/bulb_pair_step_width"
            android:layout_height="@dimen/bulb_pair_step_height"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_16"
            android:text="@string/bulb_pairing_step"
            android:background="@drawable/circular_arc_btn"/>
        <ImageView
            android:id="@+id/img_asset"
            android:layout_width="@dimen/bulb_pair_image_width"
            android:layout_height="@dimen/bulb_pair_image_height"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_install_1"/>

        <TextView
            android:id="@+id/txt_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_guide_margin"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_white"
            android:text="@string/bulb_pairing_step1_hint"
            android:textSize="@dimen/font_16_7"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_page_image_edit_height"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/salmon_background_selector"
            android:textColor="@color/color_white"
            android:textSize="@dimen/main_page_button_text_size"
            android:text="@string/next_str" />
        <!--
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_page_image_edit_height"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/salmon_background_selector"
            android:textColor="@color/color_white"
            android:textSize="@dimen/main_page_button_text_size"
            android:text="@string/next_str" />
            -->
    </LinearLayout>
</RelativeLayout>