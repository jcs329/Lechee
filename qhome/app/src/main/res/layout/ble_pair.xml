<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_above="@+id/ll_hint">
        <TextView
            android:id="@+id/txt_asset_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/start_guide_margin"
            android:textColor="@color/color_blue_light"
            android:text="@string/ble_pairing_type_title"
            android:textSize="@dimen/sensor_info_font_size"/>
        <TextView
            android:id="@+id/txt_asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_white"
            android:text="dddd"
            android:textSize="@dimen/sensor_info_font_size"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/img_asset"
        android:layout_width="@dimen/ble_pair_asset_image_width"
        android:layout_height="@dimen/ble_pair_asset_image_height"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_bpm_press_btn"/>

    <TextView
        android:id="@+id/txt_ble_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ble_pair_asset_image_height"
        android:textColor="@color/color_white"
        android:text="@string/ble_pairing_desc"
        android:textSize="@dimen/select_pair_font_size"/>

    <LinearLayout
        android:id="@+id/ll_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ble_pair_bottom_height"
        android:background="@color/color_white25"
        android:layout_above="@+id/ll_next_btn"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_ble_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/start_guide_margin"
            android:layout_marginRight="@dimen/start_guide_margin"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text="@string/ble_pairing_main_desc"
            android:textSize="@dimen/main_page_process_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_page_image_edit_height"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/salmon_background_selector"
            android:textColor="@color/color_white"
            android:textSize="@dimen/main_page_button_text_size"
            android:text="@string/next_str" />
    </LinearLayout>
</RelativeLayout>