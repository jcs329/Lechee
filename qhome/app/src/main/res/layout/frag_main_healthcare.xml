<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_devlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">
        <GridView
            android:id="@+id/healthcare_devlist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:numColumns="1"
            android:verticalSpacing="@dimen/room_hub_list_verticalspacing"
            android:stretchMode="columnWidth"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:listSelector="#00000000">
        </GridView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add_healthcare_dev"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/btn_add_healthcare_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add_hub"/>
        <android.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sensor_info_font_size"
            android:text="@string/healthcare_add_device"/>
    </LinearLayout>

</LinearLayout>