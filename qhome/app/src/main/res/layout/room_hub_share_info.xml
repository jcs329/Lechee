<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/share_info_width"
    android:layout_height="@dimen/share_info_height"
    android:layout_marginTop="@dimen/onboarding_setup_roomhub_margin"
    android:layout_marginLeft="@dimen/onboarding_setup_roomhub_margin"
    android:layout_marginRight="@dimen/onboarding_setup_roomhub_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/txt_owner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_blue"
            android:text="@string/room_hub_owner"
            android:textSize="@dimen/hub_owner_title_font_size"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cancel_blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/onboarding_setup_roomhub_margin"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/txt_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/hub_owner_font_size"
            android:textColor="@color/color_liteblack" />
        <!--
        <TextView
            android:id="@+id/txt_owner_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/hub_owner_font_size"
            android:textColor="@color/color_liteblack"
            android:text="dddd" />
        -->
    </LinearLayout>

</LinearLayout>