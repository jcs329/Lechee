<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/select_pair_btn_height"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="60dp"
    android:layout_marginTop="26dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/select_pair_font_size"
        android:textColor="@color/color_white"
        android:ellipsize="end"
        android:layout_weight="1"
        android:text="@string/ac_pairing"/>
    <android.widget.Space
        android:layout_width="5dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/pairBtn"
        android:layout_width="@dimen/select_pair_btn_width"
        android:layout_height="@dimen/select_pair_btn_height"
        android:background="@drawable/salmon_background_selector"
        android:textSize="@dimen/select_pair_font_size"
        android:textColor="@color/color_white"
        android:text="@string/select_machine"/>
</LinearLayout>