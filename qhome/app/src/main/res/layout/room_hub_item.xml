            </LinearLayout>
            -->

                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:src="@drawable/room_hub_menu_selector"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
