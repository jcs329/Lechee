<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_asset_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/start_guide_margin"
                android:textColor="@color/color_blue_light"
                android:text="@string/ble_pairing_mgm_title"
                android:textSize="@dimen/sensor_info_font_size"/>

            <TextView
                android:id="@+id/txt_dev_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/color_white"
                android:text="ddd"
                android:textSize="@dimen/determine_pair_font_size"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_guide_margin"
            android:gravity="left"
            android:textColor="@color/color_white"
            android:text="@string/rename_title"
            android:textSize="@dimen/advance_warning_font_size"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/city_content_height"
            android:background="@color/color_schedule_item_on"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/start_guide_margin"
                android:textSize="@dimen/determine_pair_font_size"
                android:textColor="@color/color_white"
                android:layout_weight="1"
                android:text="@string/bpm_default_name"/>

            <Button
                android:id="@+id/btn_rename"
                android:layout_width="@dimen/schedule_setting_mode_btn_width"
                android:layout_height="@dimen/advance_clear_btn_height"
                android:layout_marginRight="@dimen/start_guide_margin"
                android:background="@drawable/salmon_background_selector"
                android:textColor="@color/color_white"
                android:textSize="@dimen/onboarding_setup_info_text_rename_size"
                android:text="@string/rename"/>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_guide_margin"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text="@string/bpm_rename_desc"
            android:textSize="@dimen/city_desc_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_page_image_edit_height"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/salmon_background_selector"
            android:textColor="@color/color_white"
            android:textSize="@dimen/main_page_button_text_size"
            android:text="@string/start_button_name" />
    </LinearLayout>
</RelativeLayout>