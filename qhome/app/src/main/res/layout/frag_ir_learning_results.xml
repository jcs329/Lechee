<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:layout_marginTop="@dimen/ir_learning_startup_hint_margin_top"
    android:background="@color/btn_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/ir_learning_hint_text_size"
        android:textStyle="bold"
        android:text="Please select your device from the list we found" />

    <View
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ListView
        android:id="@+id/resultList"
        android:divider="@null"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <include
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/ir_learning_results_bottom" />

</LinearLayout>