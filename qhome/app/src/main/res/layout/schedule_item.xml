<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_schedule_item"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/schedule_mode_icon_height"
    android:background="@color/white_mask"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_mode"
        android:layout_width="@dimen/schedule_mode_icon_width"
        android:layout_height="@dimen/schedule_mode_icon_height"
        android:background="@color/color_schedule_mode"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/mode_icon"
            android:layout_width="@dimen/schedule_mode_icon_size"
            android:layout_height="@dimen/schedule_mode_icon_size"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_cooler_off"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginRight="13.3dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/txt_mode"
                android:layout_width="@dimen/schedule_txt_mode_width"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/schedule_mode"
                android:textColor="@color/color_white"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="3"
                android:text="cooler"/>
            <TextView
                android:id="@+id/txt_schedule_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_temp"
                android:text="25Â°"
                android:textSize="@dimen/sensor_info_font_size"
                android:layout_weight="1"
                android:textColor="@color/color_white"/>
            <android.widget.Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/btn_switch_off"
                android:layout_width="@dimen/schedule_switch_off_width"
                android:layout_height="@dimen/schedule_switch_off_height"
                android:layout_gravity="right"
                android:background="@drawable/switch_off"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginRight="13.3dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TableLayout
                    android:layout_width="@dimen/schedule_time_table_width"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            android:id="@+id/txt_schedule_start_title"
                            android:layout_width="@dimen/schedule_time_width"
                            android:layout_height="@dimen/schedule_time_height"
                            android:textSize="@dimen/schedule_time_title"
                            android:textColor="@color/color_schedule_txt_off"
                            android:text="@string/schedule_start"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/txt_schedule_end_title"
                            android:layout_width="@dimen/schedule_time_width"
                            android:layout_height="@dimen/schedule_time_height"
                            android:textSize="@dimen/schedule_time_title"
                            android:textColor="@color/color_schedule_txt_off"
                            android:layout_gravity="center_vertical"
                            android:text="@string/schedule_end"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/txt_schedule_start"
                            android:layout_width="@dimen/schedule_time_width"
                            android:layout_height="@dimen/schedule_time_height"
                            android:textSize="@dimen/schedule_time"
                            android:textColor="@color/color_white"
                            android:text="15:30 pm"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/txt_schedule_end"
                            android:layout_width="@dimen/schedule_time_width"
                            android:layout_height="@dimen/schedule_time_height"
                            android:textSize="@dimen/schedule_time"
                            android:textColor="@color/color_white"
                            android:layout_gravity="center_vertical"
                            android:text="12:00 am"/>
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TableRow>
                        <Button
                            android:id="@+id/btn_week_mon"
                            android:text="@string/schedule_week_mon"
                            style="@style/schedule_week_btn"/>
                        <Button
                            android:id="@+id/btn_week_tue"
                            android:text="@string/schedule_week_tue"
                            style="@style/schedule_week_btn"/>
                        <Button
                            android:id="@+id/btn_week_wed"
                            android:text="@string/schedule_week_wed"
                            style="@style/schedule_week_btn"/>
                        <Button
                            android:id="@+id/btn_week_thu"
                            android:text="@string/schedule_week_thu"
                            style="@style/schedule_week_btn"/>
                        <Button
                            android:id="@+id/btn_week_fri"
                            android:text="@string/schedule_week_fri"
                            style="@style/schedule_week_btn"/>
                        <Button
                            android:id="@+id/btn_week_sat"
                            android:text="@string/schedule_week_sat"
                            style="@style/schedule_week_btn"/>
                        <Button
                            android:id="@+id/btn_week_sun"
                            android:text="@string/schedule_week_sun"
                            style="@style/schedule_week_btn"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/schedule_btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/room_hub_menu_selector"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>