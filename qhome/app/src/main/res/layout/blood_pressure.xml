<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bp_margin_top"
        android:layout_marginLeft="@dimen/onboarding_setup_roomhub_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/bp_measure_time_font_size"
            android:text="@string/bp_measure_time"/>
        <TextView
            android:id="@+id/txt_measure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/bp_measure_time_font_size"
            android:text="3/17/2016 13:28"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bp_item_height"
        android:background="@color/color_bp_item_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/bp_item_vertical_gap">
        <TextView
            android:layout_width="@dimen/bp_item_content_width"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text="@string/bp_systolic"
            android:textSize="@dimen/sensor_info_font_size"/>
        <TextView
            android:id="@+id/txt_systolic"
            android:layout_width="@dimen/bp_item_content_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:gravity="right"
            android:text="113"
            android:textSize="@dimen/controller_degrees_font_size"/>
        <TextView
            android:layout_width="@dimen/bp_item_unit_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bp_item_horizontal_gap"
            android:layout_weight="2"
            android:gravity="left"
            android:textColor="@color/color_bp_unit"
            android:text="@string/bp_unit"
            android:textSize="@dimen/sensor_info_font_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bp_item_height"
        android:background="@color/color_bp_item_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/bp_item_vertical_gap">
        <TextView
            android:layout_width="@dimen/bp_item_content_width"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text="@string/bp_diastolic"
            android:textSize="@dimen/sensor_info_font_size"/>
        <TextView
            android:id="@+id/txt_diastolic"
            android:layout_width="@dimen/bp_item_content_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:gravity="right"
            android:text="76"
            android:textSize="@dimen/controller_degrees_font_size"/>
        <TextView
            android:layout_width="@dimen/bp_item_unit_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bp_item_horizontal_gap"
            android:layout_weight="2"
            android:gravity="left"
            android:textColor="@color/color_bp_unit"
            android:text="@string/bp_unit"
            android:textSize="@dimen/sensor_info_font_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bp_item_height"
        android:background="@color/color_bp_item_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/bp_item_vertical_gap">
        <TextView
            android:layout_width="@dimen/bp_item_content_width"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text="@string/bp_heart_rate"
            android:textSize="@dimen/sensor_info_font_size"/>
        <TextView
            android:id="@+id/txt_hear_rate"
            android:layout_width="@dimen/bp_item_content_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:gravity="right"
            android:text="76"
            android:textSize="@dimen/controller_degrees_font_size"/>
        <TextView
            android:layout_width="@dimen/bp_item_unit_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bp_item_horizontal_gap"
            android:layout_weight="2"
            android:gravity="left"
            android:textColor="@color/color_bp_unit"
            android:text="@string/bp_hear_rate_unit"
            android:textSize="@dimen/sensor_info_font_size"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_page_image_edit_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@drawable/salmon_background_selector"
            android:textColor="@color/color_white"
            android:textSize="@dimen/main_page_button_text_size"
            android:textAllCaps="false"
            android:text="@string/bp_history" />
    </RelativeLayout>
</LinearLayout>