<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="@dimen/bpm_remind_message_margin_top"
        android:background="@drawable/bpm_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bpm_remind_message"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/bpm_remind_message_size"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/bpm_content_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bpm_content_height">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/bpm_content_layout"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/bp_systolic"
                        android:textSize="@dimen/bpm_content_title_size"
                        android:textColor="@color/color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/bp_unit"
                        android:textSize="@dimen/bpm_content_subtitle_size"
                        android:textColor="@color/color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/bpm_systolic"
                        android:text="0"
                        android:textSize="@dimen/bpm_content_value_size"
                        android:textColor="@color/color_white"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/bp_diastolic"
                        android:textSize="@dimen/bpm_content_title_size"
                        android:textColor="@color/color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/bp_unit"
                        android:textSize="@dimen/bpm_content_subtitle_size"
                        android:textColor="@color/color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/bpm_diastolic"
                        android:text="0"
                        android:textSize="@dimen/bpm_content_value_size"
                        android:textColor="@color/color_white"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/bp_heart_rate"
                        android:textSize="@dimen/bpm_content_title_size"
                        android:textColor="@color/color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/bp_hear_rate_unit"
                        android:textSize="@dimen/bpm_content_subtitle_size"
                        android:textColor="@color/color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/bpm_heart_rate"
                        android:text="0"
                        android:textSize="@dimen/bpm_content_value_size"
                        android:textColor="@color/color_white"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--<RelativeLayout-->
            <!--android:visibility="visible"-->
            <!--android:id="@+id/bpm_guide_layout"-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="@dimen/bpm_content_height"></RelativeLayout>-->

        <Button
            android:visibility="gone"
            android:id="@+id/btn_bpm_guide"
            android:text="@string/operation_guide"
            android:textColor="@color/color_white"
            android:textSize="@dimen/bpm_guide_text_size"
            android:background="@drawable/salmon_background_selector"
            android:layout_width="@dimen/bpm_guide_btn_width"
            android:layout_height="@dimen/bpm_guide_btn_height"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>