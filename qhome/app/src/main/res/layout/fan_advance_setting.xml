    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.3dp"
        android:layout_marginLeft="17dp"
        android:text="@string/air_direction"
        android:textColor="@color/color_white"
        android:textSize="@dimen/time_settings_title"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/advance_item_height"
        android:layout_marginTop="7.3dp"
        android:background="@color/color_advance_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_auto"
            android:layout_width="@dimen/advance_fankey_btn_width"
            android:layout_height="@dimen/advance_fankey_btn_height"
            android:layout_marginLeft="17dp"
            android:text="@string/fan_advance_air_direction_on"
            android:textColor="@color/color_white"
            android:textSize="@dimen/time_settings_title"
            android:textAllCaps="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/controller_btn_selector"/>
        <android.widget.Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_fix"
            android:layout_width="@dimen/advance_fankey_btn_width"
            android:layout_height="@dimen/advance_fankey_btn_height"
            android:text="@string/fan_advance_air_direction_off"
            android:textColor="@color/color_white"
            android:textSize="@dimen/time_settings_title"
            android:textAllCaps="false"
            android:background="@drawable/controller_btn_selector"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.3dp"
        android:layout_marginLeft="17dp"
        android:text="@string/mode"
        android:textColor="@color/color_white"
        android:textSize="@dimen/time_settings_title"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fan_controller_mode_height"
        android:layout_marginTop="7.3dp"
        android:background="@color/color_advance_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_humidification"
            android:layout_width="@dimen/fan_controller_btn_size"
            android:layout_height="@dimen/fan_controller_btn_size"
            android:layout_marginLeft="17dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/schedule_time"
            android:text="@string/fan_advance_mode_humidification"
            android:textAllCaps="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/suggest_temp_btn_selector"/>
        <Button
            android:id="@+id/btn_ion"
            android:layout_width="@dimen/fan_controller_btn_size"
            android:layout_height="@dimen/fan_controller_btn_size"
            android:layout_marginLeft="17dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/schedule_time"
            android:text="@string/fan_advance_mode_ion"
            android:textAllCaps="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/suggest_temp_btn_selector"/>
        <Button
            android:id="@+id/btn_sleep"
            android:layout_width="@dimen/fan_controller_btn_size"
            android:layout_height="@dimen/fan_controller_btn_size"
            android:layout_marginLeft="17dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/schedule_time"
            android:text="@string/fan_advance_mode_sleep"
            android:textAllCaps="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/suggest_temp_btn_selector"/>
        <Button
            android:id="@+id/btn_natural"
            android:layout_width="@dimen/fan_controller_btn_size"
            android:layout_height="@dimen/fan_controller_btn_size"
            android:layout_marginLeft="17dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/schedule_time"
            android:text="@string/fan_advance_mode_natural"
            android:textAllCaps="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/suggest_temp_btn_selector"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.3dp"
        android:layout_marginLeft="13.3dp"
        android:text="@string/advance_warning"
        android:gravity="center"
        android:textColor="@color/color_dark_grayish_cyan"
        android:textSize="@dimen/advance_warning_font_size"/>
</LinearLayout>