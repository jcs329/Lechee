<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roomhub_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btn_mute"
                    android:layout_width="@dimen/circle_button_55"
                    android:layout_height="@dimen/circle_button_55"
                    android:layout_margin="7dp"
                    android:background="@drawable/btn_tv_mute_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_13"
                    android:text="@string/tv_controller_mute"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="18dp">
                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="@dimen/circle_button_big"
                    android:layout_height="@dimen/circle_button_big"
                    android:background="@drawable/btn_tv_menu_selector"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="18dp">
                <ImageButton
                    android:id="@+id/btn_source"
                    android:layout_width="@dimen/circle_button_55"
                    android:layout_height="@dimen/circle_button_55"
                    android:layout_margin="7dp"
                    android:background="@drawable/btn_tv_source_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_13"
                    android:text="@string/tv_controller_source"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@+id/ll_function"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/tv_divider"
        android:layout_height="1dp"
        android:background="@color/color_white"/>

    <LinearLayout
        android:id="@+id/ll_ch_vol_adjust"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
        <RelativeLayout
            android:layout_width="@dimen/tv_btn_bg_width"
            android:layout_height="@dimen/tv_btn_bg_height"
            android:background="@drawable/bg_btnbg">
            <ImageButton
                android:id="@+id/btn_vol_higher"
                android:layout_width="@dimen/circle_button_mid"
                android:layout_height="@dimen/circle_button_mid"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_tv_vol_higher_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_controller_volumn"
                android:textSize="@dimen/font_16"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"/>
            <ImageButton
                android:id="@+id/btn_vol_lower"
                android:layout_width="@dimen/circle_button_mid"
                android:layout_height="@dimen/circle_button_mid"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_tv_vol_lower_selector"/>
        </RelativeLayout>

        <android.widget.Space
            android:layout_width="@dimen/controller_temp_gap"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="@dimen/tv_btn_bg_width"
            android:layout_height="@dimen/tv_btn_bg_height"
            android:background="@drawable/bg_btnbg">
            <ImageButton
                android:id="@+id/btn_ch_higher"
                android:layout_width="@dimen/circle_button_mid"
                android:layout_height="@dimen/circle_button_mid"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_tv_ch_higher_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_controller_channel"
                android:textSize="@dimen/font_16"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"/>
            <ImageButton
                android:id="@+id/btn_ch_lower"
                android:layout_width="@dimen/circle_button_mid"
                android:layout_height="@dimen/circle_button_mid"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_tv_ch_lower_selector"/>
        </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/tv_progress_bottom"
        android:src="@drawable/loading_02"/>


</RelativeLayout>
