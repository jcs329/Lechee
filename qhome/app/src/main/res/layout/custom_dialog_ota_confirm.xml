<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/custom_dialog_width"
    android:minHeight="@dimen/ota_custom_dialog_height"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_message"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/onboarding_custom_dialog_button_margin_top"
        android:text="@string/need_login_msg"
        android:textSize="@dimen/custom_dialog_font_size"
        android:textColor="@color/color_liteblack"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/custom_dialog_button_margin_top"
        android:layout_marginBottom="@dimen/onboarding_custom_dialog_button_margin_bottom"
        android:gravity="center">
        <Button
            android:layout_width="@dimen/custom_dialog_button_width"
            android:layout_height="@dimen/custom_dialog_button_height"
            android:id="@+id/btn_yes"
            android:text="@string/yes"
            android:textColor="@drawable/custom_dialog_txt_selector"
            android:textSize="@dimen/custom_dialog_font_size"
            android:background="@drawable/custom_dialog_btn_selector"/>
        <android.widget.Space
            android:layout_width="13.7dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="@dimen/custom_dialog_button_width"
            android:layout_height="@dimen/custom_dialog_button_height"
            android:id="@+id/btn_no"
            android:text="@string/no"
            android:textColor="@drawable/custom_dialog_txt_selector"
            android:textSize="@dimen/custom_dialog_font_size"
            android:background="@drawable/custom_dialog_btn_selector"/>
    </LinearLayout>
</LinearLayout>
