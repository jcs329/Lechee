<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_next_btn"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgResult"
            android:layout_width="@dimen/bulb_pair_result_icon_width"
            android:layout_height="@dimen/bulb_pair_result_icon_height"
            android:src="@drawable/icon_lamp_connection_success"/>

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgResult"
            android:gravity="center"
            android:layout_margin="@dimen/start_guide_margin"
            android:textColor="@color/color_white"
            android:text="@string/ble_pairing_fail_desc"
            android:textSize="@dimen/main_page_text_title_desc_size"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_page_image_edit_height"
            android:layout_gravity="center"
            android:background="@drawable/salmon_background_selector"
            android:textColor="@color/color_white"
            android:textSize="@dimen/main_page_button_text_size"
            android:text="@string/next_str" />
        <!--
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_page_image_edit_height"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/salmon_background_selector"
            android:textColor="@color/color_white"
            android:textSize="@dimen/main_page_button_text_size"
            android:text="@string/next_str" />
            -->
    </LinearLayout>

</RelativeLayout>