<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_mask"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/electric_height"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/electric_icon"
            android:layout_width="@dimen/electric_icon_size"
            android:layout_height="@dimen/electric_icon_size"
            android:textColor="@color/color_white"
            android:textSize="@dimen/determine_pair_font_size"
            android:background="@drawable/btn_add_ac"/>
        <TextView
            android:id="@+id/txt_electric_models"
            android:layout_width="@dimen/electric_models_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:textSize="@dimen/city_button_padding_top"
            android:textColor="@color/color_white"/>

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_schedule_mode"
        android:orientation="horizontal">
        <include
            layout="@layout/custom_image_button"
            android:id="@+id/btn_pair"
            android:layout_marginLeft="@dimen/controller_temp_left_margin"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <include
            layout="@layout/custom_image_button"
            android:id="@+id/btn_del"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>