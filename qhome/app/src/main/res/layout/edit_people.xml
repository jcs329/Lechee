<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txt_account"
        android:layout_width="@dimen/add_people_btn_width"
        android:layout_height="@dimen/add_people_btn_height"
        android:layout_marginLeft="@dimen/ir_learning_hint_text_margin_top"
        android:layout_marginTop="@dimen/ir_learning_hint_text_margin_top"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="@dimen/share_people_title_font_size"
        android:singleLine="true"
        android:background="@color/color_white50"
        android:textColor="@color/color_white"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"/>

    <TextView
        android:id="@+id/txt_nick_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ir_learning_hint_text_margin_top"
        android:layout_marginTop="@dimen/ir_learning_hint_text_margin_top"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="@string/enter_nickname"
        android:textSize="@dimen/exist_people_title_font_size"
        android:textColor="@color/color_white" />

    <EditText
        android:id="@+id/txt_nick_name"
        android:layout_width="@dimen/add_people_btn_width"
        android:layout_height="@dimen/add_people_btn_height"
        android:layout_marginLeft="@dimen/ir_learning_hint_text_margin_top"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="@dimen/share_people_title_font_size"
        android:singleLine="true"
        android:background="@color/color_white50"
        android:textColor="@color/color_white"
        android:cursorVisible="true"
        android:textCursorDrawable="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_people_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_page_image_edit_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/salmon_background_selector_lite"
        android:textColor="@color/color_white"
        android:textSize="@dimen/main_page_button_text_size"
        android:text="@string/determine_machine" />
    </RelativeLayout>
</LinearLayout>